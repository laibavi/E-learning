<header class="header-image">
    <!-- Main navigation -->
<nav class="navbar navbar-expand-md navbar-dark">
    <div class="container">
        <%= link_to t(".branch"), root_path, class: "navbar-brand" %>
        <%= button_tag type: "button", class:"navbar-toggler",
         data: {toggle: "collapse", target: "#mainNavbar"},
         aria: {controls: "mainNavbar", expanded:"false",
            label:"Toggle navigation" } do %>
            <span class="navbar-toggler-icon"></span>
        <% end %>
        <div class="collapse navbar-collapse" id="mainNavbar">
            <ul class="navbar-nav mr-auto justify-content-end">
                <li class="nav-item active">
                    <%= link_to root_path, class:"nav-link" do %>
                    <%= t ".home" %>
                    <span class="sr-only"></span>
                    <% end %>
                </li>
                <li class="nav-item dropdown">
                    <%= link_to t(".categories"), "#", class: "nav-link dropdown-toggle",
                     data: {toggle: "dropdown"}, role: "button",
                      aria: {haspopup: "true", expanded: "false"} %>
                    <div class="dropdown-menu navbar-dark bg-primary">
                      <%= link_to t(".type"), "#", class: "dropdown-item" %>
                    </div>
                </li>
                <li class="nav-item">
                    <%= link_to t(".word-list"), "#", class: "nav-link" %>
                </li>
                <li class="nav-item">
                   <%= link_to t(".login"), "#", class: "nav-link" %>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- Jumbtron / Slider -->
<div class="jumbotron-wrap jumbotron-wrap-image mb-0">
    <div class="container">
        <div id="mainCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="jumbotron">
                        <h1 class="text-center"><%= t(".bazon1") %></h1>
                        <p class="lead text-center">
                            <%= t(".bazon-content1") %>
                        </p>
                        <p class="lead text-center">
                            <%= link_to "#", class: "btn btn-primary btn-lg",
                             role: "button" do %>
                                <i class="fa fa-info"></i>
                                <%= t(".word-list") %>
                             <% end %>
                            <%= link_to "#", class:"btn btn-secondary btn-lg",
                                role: "button" do %>
                                <i class="fa fa-gbp"></i> &nbsp;
                                <%= t(".start-lesson") %>
                            <% end %>
                        </p>
                    </div>
                </div>

                <div class="carousel-item">
                    <div class="jumbotron">
                        <h1 class="text-center"><%= t(".bazon2") %></h1>
                        <p class="lead text-center">
                            <%= t(".bazon-content2")%>
                        </p>
                        <p class="lead text-center">
                            <%= link_to "#", class:"btn btn-secondary btn-lg",
                                role: "button" do %>
                                <i class="fa fa-gbp"></i> &nbsp;
                                <%= t ".word-list"  %>
                            <% end %>
                            <%= link_to "#", class: "btn btn-primary btn-lg",
                             role: "button" do %>
                                <i class="fa fa-info"></i>
                                <%= t ".start-lesson"  %>
                            <% end %>
                        </p>
                    </div>
                </div>
            </div>

            <%= link_to "#mainCarousel", class:"carousel-control-prev",
                role:"button", data: {slide: "prev"} do %>
                <span class="carousel-control-prev-icon"
                 aria-hidden="true"></span>
                <span class="sr-only"><%= t ".previous" %></span>
            <% end %>
            <%= link_to "#mainCarousel", class:"carousel-control-next",
                role:"button", data: {slide: "next"} do %>
                <span class="carousel-control-next-icon"
                 aria-hidden="true"></span>
                <span class="sr-only"><%= t ".next" %></span>
            <% end %>
        </div>
    </div>
</div>

</header>
